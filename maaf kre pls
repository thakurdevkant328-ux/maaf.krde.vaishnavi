<script>
// THEME
document.getElementById("themeToggle").addEventListener("change",e=>{
 document.body.classList.toggle("dark");
 if(!document.body.classList.contains("dark")){
  document.getElementById("music").play();
 }else{
  document.getElementById("music").pause();
 }
});

// TIMER
const start=new Date("2023-10-01");
setInterval(()=>{
 let d=new Date()-start;
 let days=Math.floor(d/(1000*60*60*24));
 document.getElementById("timer").innerText=
 days+" days since we drifted apart.";
},1000);

// CHAT
const messages=[
"I should have stopped you that day.",
"I am really sorry.",
"I accept my mistakes.",
"My ego ruined things.",
"Bas ek last chanceâ€¦"
];
let i=0;
function typeChat(){
 if(i<messages.length){
  let div=document.createElement("div");
  div.className="msg";
  div.innerText=messages[i];
  document.getElementById("chat").appendChild(div);
  i++;
  setTimeout(typeChat,1200);
 }
}
typeChat();

// PROMISE JAR
const promises=[
"I promise to listen more and speak less.",
"I promise to fix problems, not win arguments.",
"I promise to cherish every little moment.",
"I promise to understand before reacting.",
"I promise to admit my mistakes without ego."
];
function showPromise(){
 let p=promises[Math.floor(Math.random()*promises.length)];
 let box=document.getElementById("promise");
 box.style.display="block";
 box.innerText=p;
}

// FORGIVE
function forgive(){
 document.getElementById("result").innerHTML="<p>Thank you for this chance ğŸ¤</p>";
 for(let i=0;i<40;i++){
  let c=document.createElement("div");
  c.className="confetti";
  c.style.left=Math.random()*100+"vw";
  c.style.background=["red","pink","yellow"][Math.floor(Math.random()*3)];
  document.body.appendChild(c);
  setTimeout(()=>c.remove(),3000);
 }
}
function noForgive(){
 document.getElementById("result").innerHTML=
 "<p>I understand. I respect your decision. I just wanted to apologize sincerely.</p>";
}

// COUPON
function openCoupon(){
 document.getElementById("coupon").style.display="block";
}
</script>

